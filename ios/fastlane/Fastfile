default_platform(:ios)

platform :ios do
  desc "Build IPA for TestFlight"
  lane :build_ipa do
    # Build Flutter first
    sh("cd .. && flutter build ios --release --no-codesign")
    
    # Force manual signing by directly modifying project settings
    sh("sed -i '' 's/CODE_SIGN_STYLE = Automatic;/CODE_SIGN_STYLE = Manual;/g' Runner.xcodeproj/project.pbxproj")
    
    # Update provisioning
    update_project_provisioning(
      xcodeproj: "Runner.xcodeproj",
      profile: "build_pp.mobileprovision",
      target_filter: "Runner",
      build_configuration: "Release"
    )
    
    # Update team
    update_project_team(
      path: "Runner.xcodeproj",
      teamid: "L2J8AW86LW"
    )
    
    # Build and sign the archive
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      codesigning_identity: "Apple Distribution: Arman J"
    )
  end
end
